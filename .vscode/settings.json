{
  // Open JSON Editor For Settings
  "workbench.settings.editor": "json",

  // Custom CSS and JS Config For VSCode. First Need To Install Extension "Custom CSS and JS Loader"
  "vscode_custom_css.imports": [
    "file:///home/m/custom-vscode.css",
    "file:///home/m/vscode-script.js"
  ],

  // Theme Config
  "workbench.colorTheme": "Palenight Theme",
  "workbench.iconTheme": "vscode-icons",

  // Font Config
  "editor.fontFamily": "Cascadia Code, Fira Code, Operator Mono",
  "editor.fontSize": 17,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "bold",

  // Editor
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "explorer.confirmDelete": false,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "nxConsole.showNodeVersionOnStartup": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "security.promptForLocalFileProtocolHandling": false,
  "workbench.editor.showTabs": "multiple",
  "editor.lineNumbers": "on",
  "workbench.tree.indent": 15,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword",
          "variable.language",
          "entity.other.attribute-name.html",
          "entity.other.attribute-name",
          "keyword.control",
          "storage.type",
          "comment",
          "comment.block",
          "comment.line"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // UI Configuration
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 250,
  "window.commandCenter": false,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "auto",
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.activityBar.location": "top",

  // Github settings
  "github.copilot.editor.enableAutoCompletions": true,
  "git.openRepositoryInParentFolders": "never",
  "githubPullRequests.pullBranch": "never",
  "git.confirmSync": false,

  // Cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,

  // Config Related To Code Formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.tabWidth": 4,
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "apility.beautify-blade",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Misc Config
  "breadcrumbs.enabled": false,
  "workbench.startupEditor": "none",
  "explorer.compactFolders": false,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "breadcrumbs.filePath": "off",
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "window.zoomLevel": 0,

  // New Misc Config
  "scm.diffDecorations": "none",
  "editor.matchBrackets": "never",
  "workbench.tips.enabled": false,
  "editor.colorDecorators": false,
  "git.decorations.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "problems.decorations.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  "editor.copyWithSyntaxHighlighting": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.emptySelectionClipboard": false,
  "workbench.editor.enablePreview": false,
  "window.newWindowDimensions": "inherit",
  "diffEditor.renderSideBySide": false,
  "editor.snippetSuggestions": "top",
  "editor.detectIndentation": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.guides.indentation": false
}
